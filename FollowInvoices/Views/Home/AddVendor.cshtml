        // Edit Vendor Functions
        function openEditDialog(vendorId, vendorName) {
            document.getElementById('edit-vendor-id').value = vendorId;
            document.getElementById('edit-vendor-name').value = vendorName;
            document.getElementById('editVendorDialog').style.display = 'flex';
            document.getElementById('edit-vendor-name').focus();
        }

        function closeEditDialog() {
            document.getElementById('editVendorDialog').style.display = 'none';
            document.getElementById('edit-vendor-id').value = '';
            document.getElementById('edit-vendor-name').value = '';
        }

        function updateVendor() {
            var vendorId = document.getElementById('edit-vendor-id').value;
            var newVendorName = document.getElementById('edit-vendor-name').value.trim();

            if (!newVendorName) {
                alert('يرجى إدخال اسم المورد الجديد');
                return;
            }

            var saveBtn = document.querySelector('#editVendorDialog .btn-primary');
            var originalText = saveBtn.innerHTML;
            saveBtn.innerHTML = 'جاري الحفظ...';
            saveBtn.disabled = true;

            $.ajax({
                url: '@Url.Action("UpdateVendor", "Home")',
                type: 'POST',
                data: {
                    id: vendorId,
                    vendorName: newVendorName
                },
                success: function(response) {
                    if (response.success) {
                        var vendorCard = document.querySelector(`.vendor-card[data-id="${vendorId}"]`);
                        if (vendorCard) {
                            vendorCard.querySelector('.vendor-name').textContent = newVendorName;
                            vendorCard.setAttribute('data-vendorname', newVendorName);

                            const vendorIndex = allVendors.findIndex(v => v.id == vendorId);
                            if (vendorIndex !== -1) {
                                allVendors[vendorIndex].vendorName = newVendorName;
                            }
                        }
                        closeEditDialog();
                        alert(response.message);
                    } else {
                        alert('حدث خطأ أثناء تحديث المورد: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    alert('حدث خطأ في الاتصال: ' + error);
                },
                complete: function() {
                    saveBtn.innerHTML = originalText;
                    saveBtn.disabled = false;
                }
            });
        }

        // Delete Vendor Functions
        function openDeleteDialog(vendorId, vendorName) {
            document.getElementById('delete-vendor-id').value = vendorId;
            document.getElementById('delete-vendor-name-text').textContent = vendorName;
            document.getElementById('deleteVendorDialog').style.display = 'flex';
        }

        function closeDeleteDialog() {
            document.getElementById('deleteVendorDialog').style.display = 'none';
            document.getElementById('delete-vendor-id').value = '';
            document.getElementById('delete-vendor-name-text').textContent = '';
        }

        function deleteVendor() {
            var vendorId = document.getElementById('delete-vendor-id').value;

            var deleteBtn = document.querySelector('#deleteVendorDialog .btn-danger');
            var originalText = deleteBtn.innerHTML;
            deleteBtn.innerHTML = 'جاري الحذف...';
            deleteBtn.disabled = true;

            $.ajax({
                url: '@Url.Action("DeleteVendor", "Home")',
                type: 'POST',
                data: {
                    id: vendorId
                },
                success: function(response) {
                    if (response.success) {
                        var vendorCard = document.querySelector(`.vendor-card[data-id="${vendorId}"]`);
                        if (vendorCard) {
                            vendorCard.remove();
                        }

                        allVendors = allVendors.filter(v => v.id != vendorId);

                        document.getElementById('vendors-count').innerHTML = `إجمالي الموردين: <span>${allVendors.length}</span>`;

                        var vendorCards = document.querySelectorAll('.vendor-card');
                        if (vendorCards.length === 0) {
                            location.reload();
                        }

                        closeDeleteDialog();
                        alert('تم حذف المورد بنجاح');
                    } else {
                        alert('حدث خطأ أثناء حذف المورد: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    alert('حدث خطأ في الاتصال: ' + error);
                },
                complete: function() {
                    deleteBtn.innerHTML = originalText;
                    deleteBtn.disabled = false;
                }
            });
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.vendor-card').forEach(function(card) {
                card.addEventListener('click', function() {
                    var vendorId = this.getAttribute('data-id');
                    var vendorName = this.getAttribute('data-vendorname');
                    openEditDialog(vendorId, vendorName);
                });
            });

            document.querySelectorAll('.dialog-overlay').forEach(function(overlay) {
                overlay.addEventListener('click', function(e) {
                    if (e.target === this) {
                        if (this.id === 'editVendorDialog') {
                            closeEditDialog();
                        } else if (this.id === 'deleteVendorDialog') {
                            closeDeleteDialog();
                        }
                    }
                });
            });

            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeEditDialog();
                    closeDeleteDialog();
                }
            });
        });
    </script>
