            <button class="header-btn">تسجيل الخروج</button>
        </div>
    </div> *@

    <!-- Add Vendor Form -->
    <h2>اضافة مورد</h2>
    <div class="form-container">
        <div class="input-wrapper">
            <label>اسم المورد</label>
            <input type="text" id="vendor-name" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" required>
        </div>
        <div class="button-container">
            <button class="custom-btn btn-primary" onclick="RedirectToExecuteAddVendorAction()">تنفيذ</button>
            <button class="custom-btn btn-secondary" onclick="GoToHomePage()">الرجوع إلي القائمة الرئيسية</button>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Vendors List Section -->
        <div class="vendors-header">
            <h3 class="vendor-title">قائمة الموردين</h3>

            <!-- Search and Export Controls -->
            <div class="controls-container">
                <div class="search-box">
                    <input type="text" id="vendor-search" placeholder="ابحث باسم المورد..." class="search-input">
                    <span class="search-icon">🔍</span>
                </div>
                <div class="export-buttons">
                    <button class="export-btn excel-btn" onclick="exportToExcel()">
                        <span class="export-icon">📊</span>
                        تصدير Excel
                    </button>
                    <button class="export-btn pdf-btn" onclick="exportToPDF()">
                        <span class="export-icon">📄</span>
                        تصدير PDF
                    </button>
                    <button class="export-btn print-btn" onclick="printVendors()">
                        <span class="export-icon">🖨️</span>
                        طباعة
                    </button>
                </div>
            </div>

            <div class="vendors-count" id="vendors-count">
                إجمالي الموردين: <span>@Model.Count</span>
            </div>
        </div>

        <div class="vendor-list" id="vendor-list">
            @foreach (var vendor in Model)
            {
                <div class="vendor-card" data-id="@vendor.Id" data-vendorname="@vendor.VendorName">
                    <div class="vendor-icon">🏷️</div>
                    <div class="vendor-id">@vendor.Id</div>
                    <div class="vendor-name">@vendor.VendorName</div>
                    <div class="vendor-actions">
                        <button class="action-btn edit-btn" onclick="event.stopPropagation(); openEditDialog('@vendor.Id', '@vendor.VendorName')">✏️</button>
                        <button class="action-btn delete-btn" onclick="event.stopPropagation(); openDeleteDialog('@vendor.Id', '@vendor.VendorName')">🗑️</button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-vendors">لا توجد بيانات موردين حاليًا</div>
    }

    <!-- Edit Vendor Dialog -->
    <div id="editVendorDialog" class="dialog-overlay" style="display: none;">
        <div class="dialog-content">
            <div class="dialog-header">
                <h3>تعديل اسم المورد</h3>
                <span class="dialog-close" onclick="closeEditDialog()">&times;</span>
            </div>
            <div class="dialog-body">
                <input type="hidden" id="edit-vendor-id">
                <div class="input-wrapper">
                    <label>اسم المورد الجديد</label>
                    <input type="text" id="edit-vendor-name" class="form-input" autocomplete="off">
                </div>
            </div>
            <div class="dialog-footer">
                <button class="custom-btn btn-primary" onclick="updateVendor()">حفظ التغييرات</button>
                <button class="custom-btn btn-secondary" onclick="closeEditDialog()">إلغاء</button>
            </div>
        </div>
    </div>

    <!-- Delete Vendor Dialog -->
    <div id="deleteVendorDialog" class="dialog-overlay" style="display: none;">
        <div class="dialog-content">
            <div class="dialog-header">
                <h3>حذف المورد</h3>
                <span class="dialog-close" onclick="closeDeleteDialog()">&times;</span>
            </div>
            <div class="dialog-body">
                <input type="hidden" id="delete-vendor-id">
                <div class="warning-message">
                    <div class="warning-icon">⚠️</div>
                    <p>هل أنت متأكد من أنك تريد حذف المورد <strong id="delete-vendor-name-text"></strong>؟</p>
                    <p class="warning-note">هذا الإجراء لا يمكن التراجع عنه.</p>
                </div>
            </div>
            <div class="dialog-footer">
                <button class="custom-btn btn-danger" onclick="deleteVendor()">نعم، احذف</button>
                <button class="custom-btn btn-secondary" onclick="closeDeleteDialog()">إلغاء</button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        All rights reserved © 2025 PMS - Powered by Eng. Hossam Hassan
    </div>

    <script type="text/javascript">
        // Store original vendors data for filtering
        let allVendors = @Html.Raw(Json.Serialize(Model));

        function GoToHomePage() {
            var url = '@Url.Action("Index", "Home")';
            window.location.href = url;
        }

        function RedirectToExecuteAddVendorAction() {
            var vendor_name = document.getElementById('vendor-name').value;
            if (!vendor_name.trim()) {
                alert('يرجى إدخال اسم المورد أولاً');
                return;
            }

            var url = '@Url.Action("ExecuteAddVendor", "Home")' +
                '?vendor_name=' + encodeURIComponent(vendor_name);
            window.location.href = url;
        }

        // Search functionality
        document.getElementById('vendor-search').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase().trim();
            filterVendors(searchTerm);
        });

        function filterVendors(searchTerm) {
            const vendorList = document.getElementById('vendor-list');
            const vendorsCount = document.getElementById('vendors-count');
            const vendorCards = vendorList.getElementsByClassName('vendor-card');

            let visibleCount = 0;

            for (let card of vendorCards) {
                const vendorName = card.getAttribute('data-vendorname').toLowerCase();
                const vendorId = card.querySelector('.vendor-id').textContent;

                if (vendorName.includes(searchTerm) || vendorId.includes(searchTerm)) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            }

            vendorsCount.innerHTML = `الموردين المعروضين: <span>${visibleCount}</span> / إجمالي الموردين: <span>${allVendors.length}</span>`;
        }

        // Export to Excel
        function exportToExcel() {
            try {
                const data = allVendors.map(vendor => [
                    vendor.id,
                    vendor.vendorName
                ]);

                const wb = XLSX.utils.book_new();
                const ws = XLSX.utils.aoa_to_sheet([
                    ['رقم المورد', 'اسم المورد'],
                    ...data
                ]);

                XLSX.utils.book_append_sheet(wb, ws, 'الموردين');
                XLSX.writeFile(wb, `قائمة_الموردين_${new Date().toISOString().split('T')[0]}.xlsx`);
            } catch (error) {
                console.error('Error exporting to Excel:', error);
                alert('حدث خطأ أثناء التصدير إلى Excel');
            }
        }

        // Export to PDF
        // Export to PDF using html2pdf.js (Best for Arabic)
        function exportToPDF() {
            try {
                // Create a temporary div with the content to export
                const element = document.createElement('div');
                element.style.direction = 'rtl';
                element.style.textAlign = 'right';
                element.style.padding = '20px';
                element.style.fontFamily = 'Arial, sans-serif';

                element.innerHTML = `
                    <div style="text-align: center; margin-bottom: 20px;">
                        <h1 style="color: #3498db; margin-bottom: 10px;">قائمة الموردين</h1>
                        <p style="color: #666;">تاريخ التصدير: ${new Date().toLocaleDateString('ar-EG')}</p>
                    </div>
                    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;" border="1">
                        <thead>
                            <tr style="background-color: #3498db; color: black;">
                                <th style="padding: 10px; text-align: center;">رقم المورد</th>
                                <th style="padding: 10px; text-align: center;">اسم المورد</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${allVendors.map(vendor => `
                                <tr>
                                    <td style="padding: 8px; text-align: center;">${vendor.id}</td>
                                    <td style="padding: 8px; text-align: right;">${vendor.vendorName}</td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                    <div style="margin-top: 20px; text-align: left; font-weight: bold;">
                        إجمالي عدد الموردين: ${allVendors.length}
                    </div>
                `;

                document.body.appendChild(element);

                // Configure html2pdf
                const options = {
                    margin: 10,
                    filename: `قائمة_الموردين_${new Date().toISOString().split('T')[0]}.pdf`,
                    image: { type: 'jpeg', quality: 0.98 },
                    html2canvas: {
                        scale: 2,
                        useCORS: true,
                        logging: true
                    },
                    jsPDF: {
                        unit: 'mm',
                        format: 'a4',
                        orientation: 'portrait'
                    }
                };

                // Generate PDF
                html2pdf()
                    .from(element)
                    .set(options)
                    .save()
                    .then(() => {
                        // Clean up
                        document.body.removeChild(element);
                    });

            } catch (error) {
                console.error('Error exporting to PDF:', error);
                alert('حدث خطأ أثناء التصدير إلى PDF');
            }
        }
        // Print vendors
        function printVendors() {
            const printWindow = window.open('', '_blank');
            const vendorsData = allVendors;

            const printContent = `
                <!DOCTYPE html>
