@{
    ViewData["Title"] = "Home";
}

<body class="home-page">
    <div class="navigation-section">
        <div class="nav-card">
            <a href="" class="icon-label">
                <div class="card-content">
                    <h3>شركة خدمات البترول البحرية</h3>
                    <div class="icon-wrapper">
                        <svg class="followup-icon" xmlns="http://www.w3.org/2000/svg" width="96" height="96" viewBox="0 0 24 24">
                            <defs>
                                <linearGradient id="docGrad" x1="0" y1="0" x2="1" y2="1">
                                    <stop offset="0%" stop-color="#f1f5f9" />
                                    <stop offset="100%" stop-color="#e2e8f0" />
                                </linearGradient>
                                <linearGradient id="circleGrad" x1="0" y1="0" x2="0" y2="1">
                                    <stop offset="0%" stop-color="#34d399" />
                                    <stop offset="100%" stop-color="#059669" />
                                </linearGradient>
                            </defs>
                            <rect x="2.5" y="2.5" width="15" height="19" rx="2"
                                  fill="url(#docGrad)" stroke="#94a3b8" stroke-width="1" />
                            <line x1="5" y1="7" x2="15" y2="7" stroke="#64748b" stroke-width="1" />
                            <line x1="5" y1="10" x2="15" y2="10" stroke="#64748b" stroke-width="1" />
                            <line x1="5" y1="13" x2="12" y2="13" stroke="#64748b" stroke-width="1" />
                            <circle cx="15.5" cy="16.5" r="4.5" fill="url(#circleGrad)" stroke="#065f46" stroke-width="1" />
                            <text x="15.5" y="16.5" font-family="Arial" font-size="6" fill="#ffffff"
                                  font-weight="bold" text-anchor="middle" dominant-baseline="middle">$</text>
                        </svg>
                    </div>
                </div>
            </a>
            <div class="icon-label">نظام متابعة الفواتير</div>
        </div>
    </div>

    <div class="home-container">
        <button class="custom-btn" onclick="AddVendor()">اضافة مورد</button>
        <button class="custom-btn" onclick="Create()">اضافة فاتورة</button>
        <button class="custom-btn" onclick="Exchange()">اضافة لطلب صرف</button>
        <button class="custom-btn" onclick="FinalizeExchange()">انهاء الصرف</button>
        <button class="custom-btn" onclick="Delete()">حذف</button>
        <button class="custom-btn" onclick="Query()">استعلام</button>
        <button class="custom-btn" onclick="lastStep()">تسليم القيود</button>
    </div>

    <script src="/js/jquery-3.7.1.min.js"></script>

    <script type="text/javascript">
        function AddVendor() {
            var url = '@Url.Action("AddVendor", "Home")';
            window.location.href = url;
        }
        function Query() {
            var url = '@Url.Action("Query", "Home")';
            window.location.href = url;
        }
        function Create() {
            var url = '@Url.Action("Create", "Home")';
            window.location.href = url;
        }
        function Edit() {
            var url = '@Url.Action("Edit", "Home")';
            window.location.href = url;
        }
        function Exchange() {
            var url = '@Url.Action("Exchange", "Home")';
            window.location.href = url;
        }
        function Delete() {
            var url = '@Url.Action("Delete", "Home")';
            window.location.href = url;
        }
        function PassToExchange() {
            var url = '@Url.Action("PassToExchange", "Home")';
            window.location.href = url;
        }
        function FinalizeExchange() {
            var url = '@Url.Action("FinalizeExchange", "Home")';
            window.location.href = url;
        }
        function lastStep() {
            var url = '@Url.Action("LastStep", "Home")';
            window.location.href = url;
        }
    </script>
</body>