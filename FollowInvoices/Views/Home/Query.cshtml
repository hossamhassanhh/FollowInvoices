<style>
    /* === Base Layout === */
    .reports-container {
        direction: rtl;
        text-align: center;
        padding: 30px;
        font-family: "Cairo", sans-serif;
        background: linear-gradient(to bottom right, #f8f9fa, #e9f5ff);
        min-height: 100vh;
    }

        /* === Header === */
        .reports-container h2 {
            color: #003459;
            font-size: 2rem;
            margin-bottom: 25px;
            /* border-bottom: 2px solid #0077b6; */
            display: inline-block;
            padding-bottom: 5px;
            animation: fadeInSlide 1s ease-in-out;
            transition: all 0.3s ease;
            animation: spinIn 2.5s ease-in-out;
            animation-delay: 0.2s;
            animation-fill-mode: forwards;
        }

    @@keyframes spinIn {
        0% {
            opacity: 0;
            transform: rotateY(90deg) scale(0.8);
        }

        60% {
            opacity: 0.6;
            transform: rotateY(-10deg) scale(1.05);
        }

        100% {
            opacity: 1;
            transform: rotateY(0deg) scale(1);
        }
    }
    /* === Grid of Cards === */
    .reports-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
        margin: 20px auto 40px;
        max-width: 1000px;
    }

    /* === Each Report Card === */
    .report-card {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 119, 182, 0.1);
        text-decoration: none;
        color: #003459;
        font-size: 1.1rem;
        padding: 25px 10px;
        transition: all 0.25s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .report-card span {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .report-card:hover {
            transform: translateY(-6px);
            background-color: #0077b6;
            color: white;
            box-shadow: 0 6px 14px rgba(0, 119, 182, 0.25);
        }

    /* === Buttons === */
    .button-container {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

