									<div class="user-bar">
										@if (User.Identity.IsAuthenticated)
										{
											<span class="welcome">مرحباً، @User.Identity.Name!</span>
											<a asp-controller="Account" asp-action="ChangePasswordView" class="nav-link">تغيير الرقم السري</a>
											<a asp-controller="Account" asp-action="Logout" class="nav-link">تسجيل الخروج</a>
