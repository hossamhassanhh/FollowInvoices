									<style>
										.user-bar {
											display: flex;
											justify-content: flex-start;
											align-items: center;
											background: inherit;
											color: inherit;
											padding: 10px 20px;
											border-radius: 8px;
											box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
											font-size: medium;
											animation: fadeInSlide 1s ease-in-out;
										}

										.welcome {
											padding-left: 15px;
											font-weight: bold;
											color: inherit;
											opacity: 0;
											animation: fadeIn 1.5s ease-in forwards;
										}

										.nav-link {
											text-decoration: none;
											color: inherit;
											font-weight: bold;
											padding-left: 15px;
											transition: all 0.3s ease;
											opacity: 0;
											animation: fadeIn 1.5s ease-in forwards;
											animation-delay: 0.3s;
										}

											.nav-link:hover {
												color: orangered;
												text-shadow: 0 0 8px #bbe1fa;
												transform: translateY(-2px);
											}

										@@keyframes fadeInSlide {
											from

										{
											opacity: 0;
											transform: translateY(-10px);
										}

										to {
											opacity: 1;
											transform: translateY(0);
										}

										}

										@@keyframes fadeIn {
											to

										{
											opacity: 1;
										}

										}
									</style>


